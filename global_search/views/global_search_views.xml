<!-- views/global_search_views.xml -->
<odoo>
  <!-- Form View with Search Input and Tree View -->
  <record id="view_global_search_form" model="ir.ui.view">
    <field name="name">global.search.form</field>
    <field name="model">global.search</field>
    <field name="arch" type="xml">
      <form string="Global Search">
        <sheet>
          <div class="oe_title">
            <h1>
              <field name="name" placeholder="Enter search term" class="global_search_input oe_inline"/>
              <button name="global_search" type="object" string="Search" class="oe_inline oe_stat_button btn btn-primary"/>
            </h1>
          </div>
          <notebook>
            <!-- Customers -->
            <page string="Customers">
              <field name="search_results_partners" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                  <field name="name"/>
                  <field name="model"/>
                  <field name="display_name"/>
                  <field name="city"/>
                  <field name="country_code"/>
                  <field name="email"/>
                  <field name="phone"/>
                  <field name="mobile"/>
                </tree>
              </field>
            </page>

            <!-- Employees -->
            <page string="Employees">
              <field name="search_results_employees" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1" selectable="false">
                <tree string="Results" create="false" edit="false" delete="false" readonly="1" selectable="false">
                  <field name="name"/>
                  <field name="model"/>
                  <field name="job_title"/>
                  <field name="work_phone"/>
                  <field name="mobile_phone"/>
                  <field name="work_email"/>
                  <field name="private_email"/>
                </tree>
              </field>
            </page>

            <!-- Purchase -->
            <page string="Purchase">
              <field name="search_results_purchase" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                  <field name="name"/>
                  <field name="model"/>
                  <field name="activity_summary" />
                  <field name="origin" />
                  <field name="country_code" />
                  <field name="incoterm_location" />
                </tree>
              </field>
            </page>
            <!-- Sales -->
            <page string="Sales">
              <notebook>
                <page string="Orders">
                  <field name="search_results_sale_orders" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                    <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                      <field name="name"/>
                      <field name="model"/>
                      <field name="activity_summary" />
                      <field name="origin" />
                      <field name="country_code" />
                      <field name="incoterm_location" />
                    </tree>
                  </field>
                </page>
              </notebook>
            </page>

            <!-- Inventory -->
            <page string="Inventory">
              <notebook>
                <page string="Products">
                  <field name="search_results_inventory_products" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                    <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                      <field name="name"/>
                      <field name="model"/>
                      <field name="activity_summary" />
                      <field name="default_code" />
                      <field name="l10n_in_hsn_code" />
                      <field name="l10n_in_hsn_description" />
                    </tree>
                  </field>
                </page>
                <page string="Products Varients">
                  <field name="search_results_inventory_product_varients" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                    <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                      <field name="name"/>
                      <field name="model"/>
                      <field name="activity_summary" />
                      <field name="country_code" />
                      <field name="default_code" />
                      <field name="combination_indices" />
                      <field name="l10n_in_hsn_description" />
                      <field name="l10n_in_hsn_code" />
                      <field name="origin" />
                      <field name="products_availability" />
                    </tree>
                  </field>
                </page>
                <page string="Transfers">
                  <field name="search_results_inventory_transfers" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                    <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                      <field name="name"/>
                      <field name="model"/>
                      <field name="name"/>
                      <field name="model"/>
                      <field name="activity_summary" />
                      <field name="origin" />
                      <field name="country_code" />
                    </tree>
                  </field>
                </page>
              </notebook>
            </page>

            <!-- Manufacturing -->
            <page string="Manufacturing">
              <notebook>
                <page string="Orders">
                  <field name="search_results_manufacturing_orders" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                    <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                      <field name="name"/>
                      <field name="model"/>
                      <field name="activity_summary" />
                    </tree>
                  </field>
                </page>
              </notebook>
            </page>

            <!-- Accounting -->
            <page string="Accounting">
              <notebook>
                <page string="Invoices">
                  <field name="search_results_account_invoices" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                    <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                      <field name="name"/>
                      <field name="model"/>
                      <field name="activity_summary" />
                      <field name="country_code" />
                      <field name="payment_reference" />
                      <field name="invoice_source_email" />
                      <field name="invoice_partner_display_name" />
                      <field name="invoice_origin" />
                      <field name="l10n_in_gstin" />
                      <field name="l10n_in_shipping_bill_number" />
                    </tree>
                  </field>
                </page>
                <page string="Payment">
                  <field name="search_results_account_payments" nolabel="1" options="{'no_create': True, 'no_edit': True}" readonly="1">
                    <tree string="Results" create="false" edit="false" delete="false" selectable="false" readonly="1">
                      <field name="name"/>
                      <field name="model"/>
                      <field name="activity_summary" />
                      <field name="payment_reference" />
                      <field name="payment_method_code" />
                      <field name="country_code" />
                      <field name="invoice_source_email" />
                      <field name="invoice_partner_display_name" />
                      <field name="invoice_origin" />
                      <field name="l10n_in_gstin" />
                      <field name="l10n_in_shipping_bill_number" />
                    </tree>
                  </field>
                </page>
              </notebook>
            </page>

          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Action for Global Search -->
  <record id="action_global_search_view" model="ir.actions.act_window">
    <field name="name">Global Search</field>
    <field name="res_model">global.search</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_global_search_form"/>
  </record>
</odoo>
